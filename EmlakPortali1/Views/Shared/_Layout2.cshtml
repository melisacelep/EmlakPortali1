                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"> <i class="fa fa-home" aria-hidden="true"></i> Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ilanlar" asp-action="Ilan">İlanlar <i class="fa fa-bookmark" aria-hidden="true"></i></a>
                        </li>

                    </ul>

                    <!-- Butonları sağa hizalamak için yeni div ekledim -->
                    <div class="ms-auto">
                        <ul class="nav">
                            <li class="nav-item">
                                <a class="btn btn-info nav-link text-white me-2" asp-area="" asp-controller="Register" asp-action="SignUp"> <i class="fa fa-user-plus" aria-hidden="true"></i> Üye Ol</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-info nav-link text-white me-2" asp-area="" asp-controller="Register" asp-action="SignIn"> <i class="fa fa-sign-in" aria-hidden="true"></i> Üye Giriş</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger nav-link text-white me-2" asp-area="" asp-controller="Advert" asp-action="Advert"><i class="fa fa-bullhorn" aria-hidden="true"></i> İlan Ver</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

                
        <div class="container mt-5">
            <h3>İlanları Filtrele</h3>
            <form method="get" action="@Url.Action("Filter", "Home")">
                <div class="row">
                    <!-- Fiyat Aralığı -->
                    <div class="col-md-3">
                        <label for="minPrice">Min Fiyat</label>
                        <input type="number" class="form-control" id="minPrice" name="minPrice" placeholder="Min Fiyat" />
                    </div>
                    <div class="col-md-3">
                        <label for="maxPrice">Max Fiyat</label>
                        <input type="number" class="form-control" id="maxPrice" name="maxPrice" placeholder="Max Fiyat" />
                    </div>

                    <!-- İl Seçimi -->
                    <div class="col-md-3">
                        <label for="city">İl</label>
                        <select class="form-control" id="city" name="city">
                            <option value="">Seçiniz</option>
                            <option value="İstanbul">İstanbul</option>
                            <option value="Ankara">Ankara</option>
                            <option value="İzmir">İzmir</option>
                            <!-- Diğer iller buraya eklenebilir -->
                        </select>
                    </div>

                    <!-- İlçe Seçimi -->
                    <div class="col-md-3">
                        <label for="district">İlçe</label>
                        <select class="form-control" id="district" name="district">
                            <option value="">Seçiniz</option>
                            <!-- İlçeler JavaScript ile dinamik olarak yüklenecek -->
                        </select>
                    </div>
                </div>

                <div class="row mt-3">
                    <!-- Mahalle Seçimi -->
                    <div class="col-md-3">
                        <label for="neighborhood">Mahalle</label>
                        <select class="form-control" id="neighborhood" name="neighborhood">
                            <option value="">Seçiniz</option>
                            <!-- Mahalleler JavaScript ile dinamik olarak yüklenecek -->
                        </select>
                    </div>

                    <!-- İlan Durumu -->
                    <div class="col-md-3">
                        <label for="status">İlan Durumu</label>
                        <select class="form-control" id="status" name="status">
                            <option value="">Seçiniz</option>
                            <option value="Aktif">Aktif</option>
                            <option value="Pasif">Pasif</option>
                            <option value="Satıldı">Satıldı</option>
                        </select>
                    </div>

                    <!-- Satılık/Kiralık -->
                    <div class="col-md-3">
                        <label for="status">Satılık/Kiralık</label>
                        <select class="form-control" id="status" name="status">
                            <option value="">Seçiniz</option>
                            <option value="Aktif">Satılık</option>
                            <option value="Pasif">Kiralık</option>
                           
                        </select>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">Filtrele</button>
                    </div>
                </div>
            </form>
        </div>

        <br />

        <div class="container">
            <div class="search-bar">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Ara..." aria-label="Ara...">
                    <button class="btn" type="button">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>


